    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "concurrently": "^6.5.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jest-mock-extended": "^2.0.4",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.15",
    "prisma": "^3.6.0",
    "ts-loader": "^9.2.6",
    "tsplate": "^1.4.1",

  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.2"
  },
  "scripts": {
    "build": "webpack",
    "watch": "webpack --watch",
    "start": "node -r dotenv/config ./dist/backend.js",
    "serve": "nodemon -r dotenv/config ./dist/backend.js",
    "start:test": "node -r dotenv/config ./dist/backend.js dotenv_config_path=.env.test",
    "serve:test": "nodemon -r dotenv/config ./dist/backend.js dotenv_config_path=.env.test",
    "server:dev": "concurrently \"npm run watch\" \"npm run serve\"",
    "server:test": "concurrently \"npm run watch\" \"npm run serve:test\"",
    "test:setup": "docker-compose up -f ./test/infrastructure/docker-compose.yaml",
    "test:migrate": "dotenv -e .env.test -- npx prisma migrate dev --name test-1",
    "test:teardown": "docker-compose down -f ./test/infrastructure/docker-compose.yaml",
    "test:run": "dotenv -e .env.test jest -i",
    "test:service": "npm run test:run -- -- test/service",
    "test:controller": "npm run test:run -- -- test/controller",
    "test": "dotenv -e .env.test jest -i",
    "fullTest": "npm run test:setup && npm run test:migrate && npm run test:run && npm run test:teardown"
  },
